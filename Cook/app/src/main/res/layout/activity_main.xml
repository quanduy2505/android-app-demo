    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.quan.cook.MainActivity">
    <TextView
        android:gravity="center"
        android:fontFamily="arial"
        android:textStyle="bold"
        android:textSize="18dp"
