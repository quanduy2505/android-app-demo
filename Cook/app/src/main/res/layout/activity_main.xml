        android:layout_width="match_parent"
        android:layout_height="320dp">
        <TableRow>
            <Button
                android:layout_height="160dp"
                android:layout_width="190dp"/>
            <Button
                android:layout_height="160dp"
                android:layout_width="190dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_height="160dp"
                android:layout_width="190dp"/>
            <Button
                android:layout_height="160dp"
                android:layout_width="190dp"/>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/btncongthu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/abc" />




</LinearLayout>
