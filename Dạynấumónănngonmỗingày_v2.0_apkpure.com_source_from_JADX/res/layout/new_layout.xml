            </LinearLayout>
            <LinearLayout app:orientation="1" app:layout_width="-1" app:layout_height="-2">
                <android.support.design.widget.TextInputLayout app:layout_width="-1" app:layout_height="-2">
                    <EditText app:textStyle="3" app:id="@id/tit" app:background="@drawable/botronform" app:layout_width="-1" app:layout_height="-2" app:hint="Tên món ăn" app:singleLine="true" app:maxLength="1000" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout app:layout_width="-1" app:layout_height="-2">
                    <EditText app:gravity="30" app:id="@id/nd" app:background="@drawable/botronform" app:layout_width="-1" app:layout_height="400px" app:hint="Chi tiết món ăn" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout app:layout_width="-1" app:layout_height="-2">
                    <AutoCompleteTextView app:id="@id/typekey" app:background="@drawable/botronform" app:layout_width="-1" app:layout_height="-2" app:layout_marginRight="10dp" app:text="" app:hint="Thể loại, vd: Món chiên, luộc, bánh,..." app:singleLine="true">
